{
  "kind": "collectionType",
  "collectionName": "hero_slides",
  "info": {
    "singularName": "hero-slide",
    "pluralName": "hero-slides",
    "displayName": "Hero Slide"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "titleBg": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "subtitleBg": {
      "type": "string"
    },
    "buttonText": {
      "type": "string"
    },
    "buttonTextBg": {
      "type": "string"
    },
    "buttonLink": {
      "type": "string"
    },
    "buttonColor": {
      "type": "string",
      "default": "#00B553"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imageMobile": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "overlayOpacity": {
      "type": "decimal",
      "default": 0.4
    },
    "textPosition": {
      "type": "enumeration",
      "enum": [
        "left",
        "center",
        "right"
      ]
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    }
