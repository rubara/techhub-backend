{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "totalAmount": {
      "type": "decimal",
      "required": true
    },
    "shippingAddress": {
      "type": "json"
    },
    "items": {
      "type": "json"
    },
    "paymentMethod": {
      "type": "string"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "failed",
        "refunded"
      ]
    },
    "notes": {
      "type": "text"
    },
    "wantsInvoice": {
      "type": "boolean",
      "default": false
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "invoice_client": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::invoice-client.invoice-client"
    }
  }
}
