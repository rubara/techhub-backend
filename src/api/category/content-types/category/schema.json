{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name_bg": {
      "type": "string",
      "required": true
    },
    "name_en": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name_bg"
    },
    "vendorCategoryId": {
      "type": "string"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "parent"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "isVisible": {
      "type": "boolean",
      "default": true
    }
  }
}
