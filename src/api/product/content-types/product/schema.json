{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name_bg": {
      "type": "string",
      "required": true
    },
    "name_en": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name_bg"
    },
    "description_bg": {
      "type": "richtext"
    },
    "description_en": {
      "type": "richtext"
    },
    "ean": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "warranty": {
      "type": "integer",
      "default": 24
    },
    "weight": {
      "type": "decimal"
    },
    "basePrice": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "salePrice": {
      "type": "decimal"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "documents": {
      "type": "json"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "text"
    }
  }
}
