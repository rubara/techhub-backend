{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "Product"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "reviews"
    },
    "authorName": {
      "type": "string"
    },
    "authorEmail": {
      "type": "email"
    },
    "rating": {
      "type": "integer",
      "required": true
    },
    "title": {
      "type": "string"
    },
    "comment": {
      "type": "text",
      "required": true
    },
    "pros": {
      "type": "text"
    },
    "cons": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "verified": {
      "type": "boolean"
    },
    "helpful": {
      "type": "integer",
      "default": 0
    },
    "approved": {
      "type": "boolean",
      "default": false
    },
    "adminReply": {
      "type": "text"
    }
  }
}
